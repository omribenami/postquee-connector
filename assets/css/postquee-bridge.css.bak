/* Apply styles only when the specific page class is present */

/* Sidebar is now kept visible per user request. */

body.toplevel_page_postquee #wpfooter {
    display: none !important;
}

body.toplevel_page_postquee #wpcontent {
    padding-left: 0;
    min-height: 100vh;
    background: #0f172a;
    /* Fallback */
}

/* Wrapper */
.postquee-wrapper {
    height: calc(100vh - 32px);
    width: 100%;
    background: radial-gradient(circle at top right, #1e293b, #0f172a);
    position: relative;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f8fafc;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}

/* Adjust for Admin Bar on smaller screens */
@media screen and (max-width: 782px) {
    .postquee-wrapper {
        height: calc(100vh - 46px);
    }
}

/* --- Connect Card Styles --- */

.postquee-connect-card {
    background: rgba(30, 41, 59, 0.7);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
    max-width: 500px;
    width: 90%;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    animation: postqueeFadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes postqueeFadeUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.postquee-logo h2 {
    font-size: 32px;
    font-weight: 800;
    margin: 0 0 24px 0;
    background: linear-gradient(135deg, #FF8C00 0%, #FF6B00 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -1px;
}

.postquee-connect-card h1 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
    color: white;
}

.postquee-connect-card p {
    font-size: 16px;
    line-height: 1.6;
    color: #94a3b8;
    margin-bottom: 32px;
}

.postquee-connect-btn {
    display: inline-flex !important;
    align-items: center;
    justify-content: center;
    gap: 8px;
    background: linear-gradient(135deg, #FF8C00 0%, #FF6B00 100%) !important;
    color: white !important;
    border: none !important;
    padding: 12px 32px !important;
    font-size: 16px !important;
    font-weight: 600 !important;
    border-radius: 12px !important;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease !important;
    box-shadow: 0 4px 12px rgba(255, 140, 0, 0.3);
    height: auto !important;
    line-height: normal !important;
}

.postquee-connect-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 140, 0, 0.4);
    filter: brightness(1.1);
}

.postquee-connect-btn .dashicons {
    font-size: 18px;
    width: 18px;
    height: 18px;
    margin-top: 1px;
}

.postquee-connect-card .description {
    margin-top: 20px;
    font-size: 13px;
    opacity: 0.6;
    font-style: italic;
    color: #64748b;
}

/* --- Editor Button Styles (Kept from before) --- */

.send-to-postquee,
.send-to-postquee-editor {
    display: inline-flex !important;
    align-items: center;
    gap: 6px;
    font-weight: 600 !important;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.send-to-postquee:hover {
    color: #FF8C00 !important;
    transform: translateX(2px);
}

.send-to-postquee-editor {
    background: linear-gradient(135deg, #FF8C00 0%, #FF6B00 100%) !important;
    border: none !important;
    box-shadow: 0 4px 12px rgba(255, 140, 0, 0.3) !important;
    padding: 10px 20px !important;
    border-radius: 8px !important;
    font-size: 13px !important;
    color: white !important;
}

.send-to-postquee-editor:hover {
    transform: translateY(-1px) !important;
    box-shadow: 0 6px 16px rgba(255, 140, 0, 0.4) !important;
    filter: brightness(1.1);
    color: white !important;
}